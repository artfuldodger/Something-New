<p>
  <b>User:</b>
  <%= link_to @activity.user.login, @activity.user %>
</p>

<p>
  <b>Date:</b>
  <%= @activity.date %>
</p>

<p>
  <b>Description:</b>
  <%= @activity.description %>
</p>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div class="comment">
    <%= comment.text %>
    - <%= link_to comment.user.login, comment.user %> <%= time_ago_in_words(comment.created_at) %> ago
  </div>
<% end %>

<%= will_paginate @comments %>

<% if current_user %>
  <br />
  <strong>Add a Comment</strong>
  <%= form_for([@activity, @activity.comments.build]) do |f| %>
    <div class="field">
      <%= f.text_area :text %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>


<% if @activity.user == current_user %>
  <%= link_to 'Edit', edit_activity_path(@activity) %> |
<% end %>
<%= link_to 'All Activities', activities_path %>
